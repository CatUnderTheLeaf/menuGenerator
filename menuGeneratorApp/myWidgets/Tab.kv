#:kivy 2.0.0       
<Tab>:
    MDBoxLayout:
        orientation: "vertical"
        
        ScrollView:

            MDGridLayout:
                cols: 1
                adaptive_height: True
                id: box

# Recipe description in tabs
<DescriptionContent>:
    padding: dp(20), dp(20), dp(20), 0
    size_hint_y: None
    height: self.minimum_height
    width: Window.width
    orientation: "vertical"
    
    MDGridLayout:
        cols: 1
        adaptive_height: True
        spacing: dp(5)
        id: recipeIngredients 
        height: 0

    MDTextField:
        id: recipe_text
        text: root.text
        disabled: True
        multiline: True
        width: root.width
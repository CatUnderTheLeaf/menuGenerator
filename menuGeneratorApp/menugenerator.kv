#:kivy 2.0.0
<ContentNavigationDrawer>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"
    screen_manager: root.screen_manager
    nav_drawer: root.nav_drawer
    toolbar: root.toolbar

    AnchorLayout:
        anchor_x: "left"
        size_hint_y: None
        height: avatar.height

        Image:
            id: avatar
            size_hint: None, None
            size: "56dp", "56dp"
            source: "data/logo/kivy-icon-256.png"

    MDLabel:
        text: "Menu Generator"
        font_style: "Button"
        adaptive_height: True

    ScrollView:
        screen_manager: root.screen_manager
        nav_drawer: root.nav_drawer
        toolbar: root.toolbar

        DrawerList:
            id: md_list
            screen_manager: root.screen_manager
            nav_drawer: root.nav_drawer
            toolbar: root.toolbar
            
            ItemDrawer:
                text: "Menu"
                text_color: app.theme_cls.primary_color
                cur_screen: "scr 1"
                title: "Menu"
                icon: "book-open-variant"

            ItemDrawer:
                text: "Settings"
                cur_screen: "scr 2"
                title: "Settings"
                icon: "cog"

<ItemDrawer>:
    theme_text_color: "Custom"
    on_press:
        self.parent.set_color_item(self)
        self.parent.nav_drawer.set_state("close")
        self.parent.screen_manager.current = root.cur_screen
        self.parent.toolbar.title = root.title
        

    IconLeftWidget:
        icon: root.icon
        theme_text_color: "Custom"
        text_color: root.text_color

<Tab>:
    MDBoxLayout:
        orientation: "vertical"
        
        ScrollView:

            MDGridLayout:
                cols: 1
                adaptive_height: True
                id: box

<Content>
    size_hint_y: None
    height: self.minimum_height

    OneLineListItem:
        text: root.text

MDScreen:

    MDToolbar:
        id: toolbar
        pos_hint: {"top": 1}
        elevation: 10        
        title: "Menu"
        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
        right_action_items: [["refresh", lambda x: app.generateMenuTabs(), "reGenerate Menu"]]

    MDNavigationLayout:
        x: toolbar.height

        ScreenManager:
            id: screen_manager
            
            MDScreen:
                name: "scr 1"

                MDSpinner:
                    id: spinner
                    size_hint: None, None
                    size: dp(46), dp(46)
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    active: False
                
                MDBoxLayout:
                    orientation: "vertical"
                    y: root.y - toolbar.height

                    MDTabs:
                        id: tabs
                        on_tab_switch: app.on_tab_switch(*args)
            
            MDScreen:
                name: "scr 2"
                
                MDBoxLayout:
                    orientation: "vertical"
                    top: root.top - toolbar.height
                    padding: dp(10)
                    spacing: dp(10)
                    adaptive_height: True

                    MDLabel:
                        text: "Time period "

                    MDSeparator:

                    MDChooseChip:

                        MDChip:
                            text: "day"
                            color: 'lightgrey'
                            icon: "circle-outline"
                            callback: app.callback
                            selected_chip_color: app.theme_cls.primary_color

                        MDChip:
                            text: "week"
                            color: 'lightgrey'
                            icon: "circle-slice-2"
                            callback: app.callback
                            selected_chip_color: app.theme_cls.primary_color

                        MDChip:
                            text: "month"
                            color: 'lightgrey'
                            icon: "circle-slice-4"
                            callback: app.callback
                            selected_chip_color: app.theme_cls.primary_color


            
        MDNavigationDrawer:
            id: nav_drawer

            ContentNavigationDrawer:
                screen_manager: screen_manager
                nav_drawer: nav_drawer
                toolbar: toolbar
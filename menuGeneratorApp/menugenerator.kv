#:kivy 2.0.0
MDScreen:
    MDBoxLayout:
        orientation: "vertical"

        MDToolbar:
            id: toolbar
            title: "Menu Generator"
            md_bg_color: app.theme_cls.primary_color
            left_action_items: [["menu", lambda x: None]]
            elevation: 10
            
        MDTabs:
            id: tabs
            on_tab_switch: app.on_tab_switch(*args)
        
            
        
<Tab>:
    MDBoxLayout:
        orientation: "vertical"
        
        ScrollView:

            MDGridLayout:
                cols: 1
                adaptive_height: True
                id: box

<Content>
    size_hint_y: None
    height: self.minimum_height

    OneLineListItem:
        text: root.text